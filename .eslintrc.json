{
    "root": true,
    "extends": [
      "standard",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest/globals": true,
      "es6": true,
      "node": true
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "allowImportExportEverywhere": true,
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "no-template-curly-in-string": "off"
    }
  }